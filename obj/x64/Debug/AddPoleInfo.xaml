<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      x:Class="AmecFWUPI.AddPoleInfo"
      mc:Ignorable="d"
      DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Grid Margin="0,16,0,-16">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.906,1.164"
                                 StartPoint="0.244,-0.159">
                <GradientStop Color="#FFA20000"
                              Offset="0" />
                <GradientStop Color="#FFCD7C10"
                              Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Background="White"
                    Width="500"
                    HorizontalAlignment="Center"
                    Height="650"
                    VerticalAlignment="Center">
            <!--<Border Background="#FF2FF6FF" Width="100" Height="10">-->
            <TextBlock x:ConnectionId='1' x:Name="textPoleID" TextAlignment="Center" TextWrapping="Wrap" Text="Pole ID" Height="33" Padding="5" VerticalAlignment="Center" Foreground="#FF0C0B0B" FontWeight="Bold" Width="744" Margin="-242,20,-202,0"/>
            <!--</Border>-->
            <Grid Height="80" Background="AntiqueWhite">
                <CheckBox x:ConnectionId='14' x:Name="cbEnvironmental" Content="Environmental" HorizontalAlignment="Left" Margin="20,5,0,0" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='15' x:Name="cbVegetation" Content="Vegetation" HorizontalAlignment="Left" Margin="150,8,0,0" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='16' x:Name="cbNonStandard" Content="Non-standard" HorizontalAlignment="Left" Margin="260,8,0,0" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='17' x:Name="cbROW" Content="ROW" HorizontalAlignment="Left" Margin="394,9,0,0" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='18' x:Name="cbSimple" Content="Simple" HorizontalAlignment="Left" Margin="20,41,0,0" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='19' x:Name="cbAdditionalPole" Content="Additional Pole" HorizontalAlignment="Left" Margin="150,43,0,0" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='20' x:Name="cbReturn" Content="Return" HorizontalAlignment="Left" Margin="290,44,0,0" VerticalAlignment="Top"/>
            </Grid>
            <!--<Grid Height="30" Background="DarkGray"/>-->
            <Grid Height="350" Background="Lavender">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="73*"/>
                    <ColumnDefinition Width="427*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='5' x:Name="txtTakePhoto" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Photos" VerticalAlignment="Top"/>
                <Button x:ConnectionId='6' x:Name="btnAddPhoto" Content="Add Photo" HorizontalAlignment="Left" Margin="50,18,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.381,0.717"                           FontFamily="Comic Sans MS" FontSize="13.333" Foreground="Black" Background="#33342FD6" Grid.ColumnSpan="2"/>
                <TextBlock x:ConnectionId='7' x:Name="txtBlkPhotos" HorizontalAlignment="Left" Margin="20,53,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="130" Height="40" FontSize="10.667" Grid.ColumnSpan="2"/>
                <CaptureElement x:ConnectionId='8' x:Name="capturePreview" Margin="127.333,10,0,80" Grid.Column="1" />
                <Image x:ConnectionId='9' x:Name="imagePreivew" Margin="97.333,90,10,0" Grid.Column="1" />
                <TextBlock x:ConnectionId='10' x:Name="txtBlkPhotoss" HorizontalAlignment="Left" Margin="20,53,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="130" Height="40" FontSize="10.667" Grid.ColumnSpan="2"/>
                <Button x:ConnectionId='11'                          Content="Camera On" Margin="50,142,0,129" Height="29" Width="89" FontSize="13.333" Grid.ColumnSpan="2" />
                <Button x:ConnectionId='12'                             Content="Capture" Margin="50,175,0,96" Width="70" Height="29" FontSize="13.333" Grid.ColumnSpan="2"/>
                <Button x:ConnectionId='13'                                    Content="Camera Off" Margin="50,211,0,60" Height="29" Width="89" FontSize="13.333" Grid.ColumnSpan="2"/>

            </Grid>

            <Grid Height="30" Background="DarkGray"/>
            <Grid Height="80" Background="Lavender" Margin="-0.4,0,0.4,0">
                <TextBox x:ConnectionId='3' x:Name="textBoxNotes" HorizontalAlignment="Left" Margin="50,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="400" Height="50"                                       />
                <TextBlock x:ConnectionId='4' x:Name="textNotes" HorizontalAlignment="Left" Margin="10,4,0,0" TextWrapping="Wrap" Text="Add Notes" VerticalAlignment="Top" FontFamily="Segoe Print"/>
            </Grid>
            <Button x:ConnectionId='2' x:Name="btnAddPoleInfo" Content="Add to Database" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                              Background="#33137A32" Width="150" Margin="75,0" FontFamily="Sylfaen" FontSize="17.333"/>

        </StackPanel>
    </Grid>
</Page>

