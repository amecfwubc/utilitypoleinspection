<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      x:Class="AmecFWUPI.AssignedTaskView"
      mc:Ignorable="d"
      DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Grid Margin="0,16,0,-16">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.906,1.164"
                                 StartPoint="0.244,-0.159">
                <GradientStop Color="#FFA20000"
                              Offset="0" />
                <GradientStop Color="#FFCD7C10"
                              Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Background="White"
                    Width="1440"
                    HorizontalAlignment="Center"
                    Height="965"
                    VerticalAlignment="Center" Margin="0,0,0,-5">

            <ComboBox x:ConnectionId='1' x:Name="drpPoleID" HorizontalAlignment="Left" Margin="590,155,0,21"  VerticalAlignment="Top" Height="31" Width="150"                                               />
            <TextBlock x:ConnectionId='2' x:Name="txbLoginID" HorizontalAlignment="Left" Margin="489,-50,0,0" TextWrapping="Wrap" Text="Pole ID:" VerticalAlignment="Top" FontSize="17.333"/>
            <Button x:ConnectionId='3' x:Name="vieW" Content="View" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                   Background="#33137A32" Width="101" Margin="844,-75,495,0" FontFamily="Sylfaen" FontSize="17.333" Height="30"/>
            <Grid Height="46" Background="AntiqueWhite" Margin="0,-7,0,0">
                <CheckBox x:ConnectionId='18' x:Name="cbEnvironmental" Content="Environmental" HorizontalAlignment="Left" Margin="284,5,0,0" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='19' x:Name="cbVegetation" Content="Vegetation" HorizontalAlignment="Left" Margin="414,5,0,0" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='20' x:Name="cbNonStandard" Content="Non-standard" HorizontalAlignment="Left" Margin="526,8,0,0" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='21' x:Name="cbROW" Content="ROW" HorizontalAlignment="Left" Margin="662,8,0,0" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='22' x:Name="cbSimple" Content="Simple" HorizontalAlignment="Left" Margin="764,8,0,0" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='23' x:Name="cbAdditionalPole" Content="Additional Pole" HorizontalAlignment="Left" Margin="868,8,0,0" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='24' x:Name="cbReturn" Content="Return" HorizontalAlignment="Left" Margin="1010,8,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Height="30" Background="DarkGray"/>
            <DatePicker x:ConnectionId='4' x:Name="dtPickerLoadTask"  HorizontalAlignment="Left" Margin="413,1,0,0" VerticalAlignment="Bottom" Height="25"  FontSize="18.667" Width="134"/>
            <TextBlock x:ConnectionId='5' x:Name="txbdateTaskAdded" HorizontalAlignment="Left" Margin="265,-20,0,0" TextWrapping="Wrap" Text="Task Added Date:" VerticalAlignment="Top" FontSize="17.333"/>
            <DatePicker x:ConnectionId='6' x:Name="dtPickerPerformTask" HorizontalAlignment="Left" Margin="869,-50,0,-10" VerticalAlignment="Bottom" Height="40"  FontSize="18.667"/>
            <TextBlock x:ConnectionId='7' x:Name="txbdateTaskPerformed" HorizontalAlignment="Left" Margin="721,-20,0,0" TextWrapping="Wrap" Text="Task Perform Date:" VerticalAlignment="Top" FontSize="17.333"/>
            <TextBox x:ConnectionId='8' x:Name="txtPoleHeight" HorizontalAlignment="Left" Margin="458,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="31" Width="150" />
            <TextBlock x:ConnectionId='9' x:Name="txbPoleHeight" HorizontalAlignment="Left" Margin="269,-29,0,0" TextWrapping="Wrap" Text="Adjacent Pole Height:" VerticalAlignment="Top" FontSize="17.333"/>
            <TextBox x:ConnectionId='10' x:Name="txbTransformerLoad" HorizontalAlignment="Left" Margin="844,-36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="31" Width="150" />
            <TextBlock x:ConnectionId='11' x:Name="txtTransformerLoad" HorizontalAlignment="Left" Margin="655,-29,0,0" TextWrapping="Wrap" Text="Transformer Loading:" VerticalAlignment="Top" FontSize="17.333"/>
            <Grid Height="305" Background="Lavender" Margin="449,0,401,0">
                <TextBlock x:ConnectionId='15' x:Name="txtTakePhoto" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Image" VerticalAlignment="Top"/>
                <Image x:ConnectionId='16' x:Name="imagePreivew" Margin="51,10,10,0" />
                <TextBlock x:ConnectionId='17' x:Name="txtBlkPhotos" HorizontalAlignment="Left" Margin="200,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="70" Height="70"/>
            </Grid>
            <Grid Height="30" Background="DarkGray"/>
            <Grid Height="80" Background="Lavender">
                <TextBox x:ConnectionId='13' x:Name="textBoxNotes" HorizontalAlignment="Left" Margin="314,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="933" Height="50"/>
                <TextBlock x:ConnectionId='14' x:Name="textNotes" HorizontalAlignment="Left" Margin="272,4,0,0" TextWrapping="Wrap" Text="Notes" VerticalAlignment="Top" FontFamily="Segoe Print"/>
            </Grid>

            <Grid Height="30" Background="DarkGray"/>
            <!--<Button x:Name="btnAddPoleInfo" Content="Add to Database" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="btnAddPoleInfo_Click" Background="#33137A32" Width="150" Margin="577,0,713,0" FontFamily="Sylfaen" FontSize="17.333"/>-->
            <Button x:ConnectionId='12' x:Name="goBack" Content="Back" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                      Background="#33137A32" Width="101" Margin="1032,-1050,307,200" FontFamily="Sylfaen" FontSize="17.333" Height="30"/>

        </StackPanel>
    </Grid>
</Page>

