<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      x:Class="AmecFWUPI.ImportServerData"
      mc:Ignorable="d"
      DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.906,1.164"
                                 StartPoint="0.244,-0.159">
                <GradientStop Color="LightGray"
                              Offset="0" />
                <GradientStop Color="LightGray"
                              Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Background="LightGray"
                    Width="500"
                    HorizontalAlignment="Center"
                    Height="650"
                    VerticalAlignment="Center">
            <TextBlock x:ConnectionId='1' x:Name="txtmsg" HorizontalAlignment="Left" Margin="105,250,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="#FFF11717"/>
            <Button x:ConnectionId='2' x:Name="btnLoadTasks" Content="Import" HorizontalAlignment="Left" Margin="107,-100,0,0" VerticalAlignment="Top"                            Width="124" Height="42" FontSize="18.667" Canvas.ZIndex="-16"/>
            <!--<DatePicker x:Name="dtPickerLoadTask" HorizontalAlignment="Left" Margin="73,20,0,0" VerticalAlignment="Bottom" Height="40" FontSize="18.667"/>-->
            <Button x:ConnectionId='3' x:Name="goBack" Content="Back" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                      Background="#33137A32" Width="101" Margin="314,-160,85,0" FontFamily="Sylfaen" FontSize="17.333" Height="41"/>
        </StackPanel>
    </Grid>
</Page>

