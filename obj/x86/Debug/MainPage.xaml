<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      x:Class="AmecFWUPI.MainPage"
      mc:Ignorable="d"
      
      DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.906,1.164"
                                 StartPoint="0.244,-0.159">
                <GradientStop Color="#FFA20000"
                              Offset="0" />
                <GradientStop Color="#FFCD7C10"
                              Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        
        <StackPanel Background="FloralWhite"
                    Width="550"
                    HorizontalAlignment="Center"
                    Height="650"
                    VerticalAlignment="Center">
            <TextBlock FontSize="30" OpticalMarginAlignment="TrimSideBearings" Margin="15,50,0,0" Foreground="Blue" FontWeight="SemiBold" HorizontalAlignment="Center">UtilityPole Inspection App</TextBlock>
            <TextBlock x:ConnectionId='1' x:Name="Title" HorizontalAlignment="Center" Foreground="LightCoral" Margin="15,58,0,0" TextWrapping="Wrap" Text="Menu Page" FontStyle="Normal" FontWeight="Bold" VerticalAlignment="Top" FontSize="21.333"/>
            <Button x:ConnectionId='2' x:Name="btnAddTasks" Content="Add Tasks" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="42,20,38.2,0"                           Width="256" Height="42"/>
            <Button x:ConnectionId='3' x:Name="btnViewTasks" Content="View Tasks" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="42,20,38.2,0"                            Width="256" Height="42"/>
            <Button x:ConnectionId='4' x:Name="btnLoadTasks" Content="Import Tasks from Sever" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="42,20,38.2,0"                            Width="256" Height="42"/>
            <!--<Button x:Name="btnLoadTasks" Content="Load Tasks" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="42,20,38.2,0" Click="btnLoadTasks_Click" Width="256" Height="42"/>-->
        </StackPanel>
    </Grid>
</Page>

